*{
	padding: 0px;
	margin: 0px;
}
.nav{
	background: #65292B;
	color: #FFFFFF;
    line-height: 150px;
    font-size: 55px;
}

.nav span{
	display: block;
	text-align: center;
}
.btn{
	position: absolute;
	top: 44px;
	right: 50px;
    background: #65292B;
}
#button:hover{
	color: #FFFFFF;
}
#button{
	font-size: 36px;
	border-radius: 20px;
	padding: 5px 20px;
	border: 2px #FFFFFF solid;
    color: #FFFFFF;
}

.main{
	width: 100%;
	max-width: 96%;
	margin: 0 auto;
	font-size: 40px;
}

.words,.pic_handle{
	height: 500px;
	border-bottom: 1px #E7E7E7 solid;
}
.words,.pic_handle,.security{
	padding-top: 40px;
	padding-left: 20px;
}
#file_list{
	/*word-wrap: break-word;
	word-break: break-all;*/
	float: left;
}
#show{
	float: left;
}
#d{
	float: left;
}
#pic input{
	position: absolute;
}

.fl_lf{
	float: left;
}
.dropdown{
	float: right;
	width: 100%;
	max-width: 238px;
	margin-right: 22px;
	list-style: none;
	text-align: right;
}


.dropdown a{
	color: #E6E6E6;
}

#menu_li a{
	font-size: 40px;
}
.glyphicon-menu-right{
	font-size: 30px;
}


