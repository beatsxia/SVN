*{
	padding: 0px;
	margin: 0px;
}
.nav{
	background: #65292B;
	color: #FFFFFF;
    line-height: 150px;
    font-size: 55px;
}

.nav span{
	display: block;
	text-align: center;
}

#button:hover{
	color: #FFFFFF;
}
#button{
	font-size: 36px;
	border-radius: 20px;
	padding: 5px 20px;
	border: 2px #FFFFFF solid;
    color: #FFFFFF;
    position: absolute;
	top: 44px;
	right: 50px;
    background: #65292B;
    outline: none;
}

.main{
	width: 100%;
	max-width: 96%;
	margin: 0 auto;
	font-size: 40px;
}

.words,.pic_handle{
	height: 500px;
	border-bottom: 1px #E7E7E7 solid;
}
.words,.pic_handle,.security{
	padding-top: 40px;
	padding-left: 20px;
}
#upload-content{
	width: 100%;
	height: 100%;
	resize: none;
	border: 0;
	outline: none;
}

#file_list{
	/*word-wrap: break-word;
	word-break: break-all;*/
	float: left;
}
#show{
	float: left;
}
#d{
	float: left;
	cursor: pointer;
}
#pic input{
	position: absolute;
}

.fl_lf{
	float: left;
}
.dropdown{
	float: right;
	width: 100%;
	max-width: 245px;
	margin-right: 22px;
	list-style: none;
	text-align: right;
}
#ul1 li{
	list-style: none;
	float: right;
}
#dropdownMenu1{
	width: 100%;
	max-width: 88px;
	border: none;
	display: block;
}

#dropdownMenu1,.glyphicon-menu-right,.glyphicon-menu-right:hover,#dropdownMenu2{
	color: #E6E6E6;
	cursor: pointer;
}
#dropdownMenu2{
	width: 100%;
	max-width: 205px;
	border: none;
	display: none;
}

.glyphicon-menu-right{
	font-size: 30px;
	float: right;
	margin-top: 10px;
	margin-left: 5px;
}


