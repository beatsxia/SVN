}

var clock = '';
var nums = 60;
var btn;

//点击获取验证码的时候校验手机号码

//点击了获取验证码
function sendCode(ip1) {
	var re = /^1[34578]\d{9}$/;

	if(!(re.test(ip1))) {
		oDiv1.innerHTML = "请输入有效的手机号码！";
		return false;
	} else {
		oDiv1.innerHTML = "";
		return true;
	}

}

function sendCode(thisBtn) {
	btn = thisBtn;
	btn.disabled = true; //将按钮置为不可点击
	btn.value = nums + '秒后可重新获取';
	clock = setInterval(doLoop, 1000); //一秒执行一次
}

function doLoop() {
	nums--;
	if(nums > 0) {
		btn.value = nums + '秒后可重新获取';
	} else {
		clearInterval(clock); //清除js定时器
		btn.disabled = false;
		btn.value = '重新获取验证码';
		nums = 60; //重置时间
	}
}</script>
